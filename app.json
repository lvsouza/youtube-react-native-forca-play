{
  "expo": {
    "name": "Jogo da forca - ForcaPlay",
    "description": "Jogue Forca e teste seu vocabul√°rio com desafios divertidos!",
    "slug": "forca-play",
    "version": "1.0.1",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "forcaplay",
    "newArchEnabled": true,
    "platforms": [
      "ios",
      "android"
    ],
    "primaryColor": "#FFE100",
    "backgroundColor": "#454545",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFE100"
    },
    "ios": {
      "buildNumber": "1",
      "supportsTablet": true,
      "icon": {
        "dark": "./assets/ios-dark.png",
        "light": "./assets/ios-light.png",
        "tinted": "./assets/ios-tinted.png"
      },
      "bundleIdentifier": "com.lvsouzadev.forcaplay"
    },
    "android": {
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFE100"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.lvsouzadev.forcaplay"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-xxxxxxxx~xxxxxxxx"
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0e15c5eb-010f-4a03-a42a-52dee50ab11d"
      }
    }
  }
}
